generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id               String        @id
  name             String
  email            String        @unique
  avatarUrl        String?
  passwordHash     String
  role             Role
  socialLogins     SocialLogin[]
  deletedAccountAt DateTime?
  createdAt        DateTime      @default(now())
}

model SocialLogin {
  id         String @id @default(cuid())
  provider   String
  providerId String
  userId     String
  user       Users  @relation(fields: [userId], references: [id])

  @@unique([provider, providerId])
}

enum Role {
  ADMIN
  CREATOR
  CUSTOMER
}
